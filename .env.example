# .env.example
# Configuration de l'environnement - Copier en .env et modifier les valeurs

# ========================================================
# DJANGO CORE SETTINGS
# ========================================================

# Sécurité
DEBUG=True
SECRET_KEY=votre-cle-secrete-tres-longue-et-complexe-modifiez-cela-en-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,::1

# Application (True pour développement, False pour production)
DEBUG=True

# ========================================================
# DATABASE CONFIGURATION
# ========================================================

# SQLite (développement)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (production - décommenter et configurer)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=exam_access_db
# DB_USER=postgres
# DB_PASSWORD=votre_mot_de_passe_postgres
# DB_HOST=localhost
# DB_PORT=5432

# ========================================================
# CORS & FRONTEND
# ========================================================

# Frontend React/Vue/Angular URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173
FRONTEND_URL=http://localhost:3000

# ========================================================
# EMAIL CONFIGURATION
# ========================================================

# Console pour développement
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP pour production (décommenter et configurer)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=votre-email@gmail.com
# EMAIL_HOST_PASSWORD=votre-mot-de-passe-app
# DEFAULT_FROM_EMAIL=noreply@exam-system.edu

# ========================================================
# FILE STORAGE (AWS S3 - optionnel)
# ========================================================

# Stockage local (développement)
USE_S3=False

# AWS S3 pour production (décommenter et configurer)
# USE_S3=True
# AWS_ACCESS_KEY_ID=votre-access-key-id
# AWS_SECRET_ACCESS_KEY=votre-secret-access-key
# AWS_STORAGE_BUCKET_NAME=votre-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=votre-domain.cloudfront.net  # Optionnel pour CloudFront
# AWS_S3_FILE_OVERWRITE=False

# ========================================================
# CACHE & PERFORMANCE
# ========================================================

# Cache local (développement)
REDIS_URL=redis://localhost:6379/0

# ========================================================
# SECURITY SETTINGS
# ========================================================

# JWT Token expiration (en heures)
JWT_ACCESS_TOKEN_LIFETIME=1
JWT_REFRESH_TOKEN_LIFETIME=24

# Rate limiting
API_RATE_LIMIT_USER=1000/hour
API_RATE_LIMIT_ANON=100/day
SCAN_RATE_LIMIT=50/minute

# ========================================================
# APPLICATION SPECIFIC SETTINGS
# ========================================================

# Paramètres d'examen
EXAM_START_TOLERANCE=30  # minutes
EXAM_END_TOLERANCE=30    # minutes
QR_CODE_VALIDITY=30      # minutes

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
SEND_SCAN_CONFIRMATION=True

# Export limits
MAX_EXPORT_ROWS=10000

# ========================================================
# LOGGING CONFIGURATION
# ========================================================

LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# ========================================================
# THIRD-PARTY INTEGRATIONS (optionnel)
# ========================================================

# Sentry pour le monitoring d'erreurs
SENTRY_DSN=

# Twilio pour les SMS (optionnel)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
# ========================================================
# TEMPLATE DE CONFIGURATION ENVIRONNEMENT - .env.example
# ========================================================
# IMPORTANT: CE FICHIER DOIT ÊTRE COMMITÉ
# Copier ce fichier en .env et modifier les valeurs
# ========================================================

# ========================================================
# ENVIRONNEMENT & SÉCURITÉ
# ========================================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=change-me-to-a-very-secure-secret-key-minimum-50-characters
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================================
# BASE DE DONNÉES
# ========================================================
# SQLite (recommandé pour développement)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (pour production/staging)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=exam_access_db
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# ========================================================
# EMAIL CONFIGURATION
# ========================================================
# Console pour développement (recommandé)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP pour tests/production (décommenter si besoin)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL='SG Examens <noreply@exam-system.edu>'

# ========================================================
# CORS & FRONTEND
# ========================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# ========================================================
# SESSIONS & CACHE
# ========================================================
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=False
SESSION_SAVE_EVERY_REQUEST=True

# ========================================================
# STOCKAGE FICHIERS
# ========================================================
USE_S3=False

# AWS S3 pour production (décommenter et configurer)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# ========================================================
# PARAMÈTRES APPLICATION
# ========================================================
# Examens
EXAM_START_TOLERANCE=30
EXAM_END_TOLERANCE=30
QR_CODE_VALIDITY=30
MAX_SCANS_PER_MINUTE=50
MAX_JUSTIFICATIF_SIZE=10485760  # 10MB

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
SEND_SCAN_CONFIRMATION=True
SEND_EXAM_REMINDER=True
REMINDER_HOURS_BEFORE_EXAM=24

# JWT Tokens
JWT_ACCESS_TOKEN_LIFETIME=1
JWT_REFRESH_TOKEN_LIFETIME=24

# Rate Limiting
API_RATE_LIMIT_USER=1000/hour
API_RATE_LIMIT_ANON=100/day
SCAN_RATE_LIMIT=50/minute

# ========================================================
# LOGGING
# ========================================================
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# ========================================================
# EXPORT & LIMITES
# ========================================================
MAX_EXPORT_ROWS=10000

# ========================================================
# INTÉGRATIONS TIERS (optionnel)
# ========================================================
# Sentry pour le monitoring d'erreurs
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Twilio pour les SMS
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890